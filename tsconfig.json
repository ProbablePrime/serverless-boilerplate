{
    "compilerOptions": {
        "declaration": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "es2015",
        "sourceMap": true,
        "target": "es2015",
        "outDir": "dist",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "*": ["./types/*"]
        },
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "test", "dist", "lib", "**/*.spec.ts"]
}
